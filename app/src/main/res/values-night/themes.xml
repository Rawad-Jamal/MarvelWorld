<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/splash_screen</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/on_primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="screen_background">
        <item name="android:background">@color/primary_black</item>
    </style>

    <style name="card_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/space_x_small</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/space_small</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/space_x_small</item>
    </style>

    <style name="bottom_navbar" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:background">@color/secondary_black</item>
    </style>

</resources>